#!/bin/bash
# Playit installation script - Auto Installer Made by <3 Kayden!
# Tested on Ubuntu/Debian/Linux by Kayden
# Made By Kayden!

set -e

echo "=== Kayden: Updating system ==="
sudo apt update -y && sudo apt upgrade -y

echo "=== Kayden: Installing required dependencies ==="
sudo apt install -y sudo curl gpg

echo "=== Kayden: Adding Playit APT repository ==="
curl -fsSL https://playit-cloud.github.io/ppa/key.gpg | \
  gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/playit.gpg >/dev/null

echo "deb [signed-by=/etc/apt/trusted.gpg.d/playit.gpg] https://playit-cloud.github.io/ppa/data ./" | \
  sudo tee /etc/apt/sources.list.d/playit-cloud.list

echo "=== Kayden: Updating package list ==="
sudo apt update -y

echo "=== Kayden: Installing Playit ==="
sudo apt install -y playit

echo "=== Kayden: Enabling Playit service ==="
sudo systemctl enable --now playit

echo "=== Kayden: Running Playit setup ==="
playit setup

echo "✅ Kayden: Playit installation complete!"
echo "➡️ Kayden: Run 'playit tunnel' to check the tunnel status."
